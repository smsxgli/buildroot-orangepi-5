	source "$BR2_EXTERNAL_ORANGEPI_5_PATH/package/rockchip/rockchip-rga/Config.in"
	source "$BR2_EXTERNAL_ORANGEPI_5_PATH/package/rockchip/rockchip-mpp/Config.in"
